<div class="banner-event-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/PAykYb-8Er8);">
  <div class="container">
    <h2><%= @event.title %></h2>
    <p><%= @event.description %></p>
  </div>
</div>
<div class="container">
  <div class="friends">
    <h2>Récapitulatif des amis</h2>
    <% @event.friends.each do |friend| %>
    <div class="pseudo-show mt-5">
      <p>Pseudo</p>
      <input class="form-control" type="text" placeholder="<%= friend.name %>" readonly>
    </div>
    <div class="email-show">
      <p>Email</p>
      <input class="form-control" type="text" placeholder="<%= friend.email %>" readonly>
    </div>
    <% end %>
  </div>
  <div class="buttons-show mt-5">
    <%= link_to "Modifier l'événement", edit_event_path(@event), class: "btn btn-flat mr-3"  %>
    <%= link_to "C'est parti !", { controller: "events", action: "send_event_mail", id: @event.id }, class: "btn btn-flat" %>
  </div>
</div>
